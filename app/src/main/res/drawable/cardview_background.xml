<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <solid android:color="@android:color/white"/>

            <corners android:radius="30dp"/>
            <stroke android:color="#000"/>
        </shape>

    </item>

    <item android:top="-40dp" android:left="0dp" android:right="-40dp" android:bottom="-40dp">
        <shape >

            <solid android:color="@android:color/white"/>
            <stroke
                android:width="30dp"
                android:color="@color/colorPrimary"
                />
            <corners
                android:radius="40dp"/>
            <padding
                android:bottom="0dp"
                android:right="0dp"
                android:left="0dp"
                android:top="0dp"/>
        </shape>

    </item>
</layer-list>